<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>New Ceramics Form </h3>
                <!--<p class="text-subtitle text-muted">There's a lot of form layout that you can use</p>-->
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Form Layout</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>



    <!-- // Basic multiple Column Form section start -->
    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Add New Form</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <form method="post" class="form">
                                <div class="row">
                                    <div class="col-md-4 col-12">
                                        <div class="form-group">
                                            <label for="first-name-column">Area Easting</label>
                                            <input type="text" id="first-name-column" class="form-control" disabled="disabled" placeholder="Area Easting"
                                                   name="fname-column">
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-12">
                                        <div class="form-group">
                                            <label for="last-name-column">Area Northing</label>
                                            <input type="text" id="last-name-column" class="form-control" disabled="disabled" placeholder="Area Northing"
                                                   name="lname-column">
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-12">
                                        <div class="form-group">
                                            <label for="last-name-column">Area</label>
                                            <fieldset class="form-group">
                                                <select class="form-select" id="basicSelect" asp-for="Area">
                                                    @{
                                                        foreach (var item in Model.Areas)
                                                        {
                                                            <option value="@item.Id">@item.Name</option>
                                                        }
                                                     }
                                                </select>
                                            </fieldset>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="city-column">Context</label>
                                            <input type="text" id="city-column" class="form-control" placeholder="Context" asp-for="Context">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="country-floating">Excavation Method</label>
                                            <input type="text" id="country-floating" class="form-control" asp-for="ExcavationMethod"
                                                   placeholder="Excavation Method">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="city-column">Sample Number</label>
                                            <input type="text" id="city-column" class="form-control" placeholder="Sample Number" asp-for="SampleNumber">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="country-floating">Material</label>
                                            <fieldset class="form-group">
                                                <select class="form-select" id="basicSelect" asp-for="Material">
                                                    @{
                                                        foreach (var item in Model.Materials)
                                                        {
                                                            <option value="@item.Id">@item.Name</option>
                                                        }
                                                    }
                                                </select>
                                            </fieldset>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="company-column">Open Date</label>
                                            <input type="text" id="company-column" class="form-control" asp-for="OpenDate"
                                                   placeholder="Open Date">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="email-id-column">Close Date</label>
                                            <input type="text" id="email-id-column" class="form-control" asp-for="CloseDate"
                                                   placeholder="Close Date">
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-12">
                                        <div class="card-body">
                                            <p>Description</p>
                                            <div id="full">
                                                <p>Hello World!</p>
                                                <p>Some initial <strong>bold</strong> text</p>
                                                <p><br></p>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="hidden" asp-for="Description" value="TestDesc" />
                                    <div class="col-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary mr-1 mb-1">Submit</button>
                                        <button type="reset" class="btn btn-light-secondary mr-1 mb-1">Reset</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- // Basic multiple Column Form section end -->
</div>


